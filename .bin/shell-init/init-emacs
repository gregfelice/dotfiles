# install emacs
install_package emacs

# install spacemacs
if [ ! -d "~/.emacs.d" ]; then
    mkdir ~/.emacs.d
    git clone https://github.com/syl20bnr/spacemacs ~/.emacs.d
fi

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
    export EDITOR='emacs'
else
    export EDITOR='emacs'
fi
